    xsi:schemaLocation="http://public.sns.gov/schema/device.xsd http://public.sns.gov/schema/device.xsd">
    <device_name>a2r_motor</device_name>
    <device_description>One of the four motors for Slit 2. Based on HYSPEC motorsConfigFile.xml, motorsOptionsFile.xml, and motorsUnitsFile.xml.</device_description>
    <app_id>1031</app_id>
    <enumerations>
      <enumeration>
        <enum_name>enum_51</enum_name>
