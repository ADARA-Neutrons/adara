        </enum_element> 
        <enum_element>
            <enum_element_name>DRVERR</enum_element_name>
            <enum_element_value>12</enum_element_value>
        </enum_element> 
        <enum_element>
            <enum_element_name>REQERR</enum_element_name>
            <enum_element_value>13</enum_element_value>
        </enum_element> 
        <enum_element>
            <enum_element_name>MOVEERR</enum_element_name>
