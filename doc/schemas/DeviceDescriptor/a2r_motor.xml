        </enum_element>
      </enumeration> 
    </enumerations>        
    <process_variables>
      <process_variable>
          <pv_name>a2r</pv_name>
          <pv_id>0</pv_id>
          <pv_nids_read>dstp://motors/Position[5]</pv_nids_read>
          <pv_type>double</pv_type>
          <pv_units>millimetre</pv_units>
          <pv_hint>
              <pv_nexus_link>/NXroot/NXinstrument/NXaperture[@name="aperture2"]/a2r</pv_nexus_link>
              <pv_nexus_type>NXpositioner</pv_nexus_type>              
          </pv_hint>   
      </process_variable>
        <process_variable>
            <pv_name>a2rRequest</pv_name>
            <pv_id>1</pv_id>
            <pv_nids_read>dstp://motors/Request[5]</pv_nids_read>
            <pv_nids_write>dstp://motors/RequestRem[5]</pv_nids_write>
            <pv_type>double</pv_type>
            <pv_units>millimetre</pv_units>
            <pv_hint>
                <pv_nexus_type>NXpositioner</pv_nexus_type>              
            </pv_hint>   
        </process_variable>
        <process_variable>
            <pv_name>a2rStatus</pv_name>
            <pv_id>2</pv_id>
            <pv_nids_read>dstp://motors/RStatus[5]</pv_nids_read>
            <pv_type>enum_51</pv_type>
            <pv_hint>
                <pv_nexus_type>NXpositioner</pv_nexus_type>              
            </pv_hint> 
        </process_variable>      
    </process_variables>
    <serial_number>200E</serial_number>
