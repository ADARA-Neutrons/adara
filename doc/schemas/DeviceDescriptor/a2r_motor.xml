        <enum_element>
            <enum_element_name>UNKNOWN</enum_element_name>
            <enum_element_value>0</enum_element_value>
        </enum_element> 
        <enum_element>
            <enum_element_name>ACTIONREQ</enum_element_name>
            <enum_element_value>1</enum_element_value>
        </enum_element> 
        <enum_element>
            <enum_element_name>MOVING</enum_element_name>
            <enum_element_value>2</enum_element_value>
        </enum_element> 
        <enum_element>
            <enum_element_name>ATPOSITION</enum_element_name>
            <enum_element_value>3</enum_element_value>
        </enum_element> 
        <enum_element>
            <enum_element_name>OFFTARGET</enum_element_name>
            <enum_element_value>4</enum_element_value>
        </enum_element> 
        <enum_element>
            <enum_element_name>POSLIM</enum_element_name>
            <enum_element_value>5</enum_element_value>
        </enum_element> 
        <enum_element>
            <enum_element_name>NEGLIM</enum_element_name>
            <enum_element_value>6</enum_element_value>
        </enum_element> 
        <enum_element>
            <enum_element_name>PROBSTOP</enum_element_name>
            <enum_element_value>7</enum_element_value>
        </enum_element> 
        <enum_element>
            <enum_element_name>ABORTED</enum_element_name>
            <enum_element_value>8</enum_element_value>
        </enum_element> 
        <enum_element>
            <enum_element_name>OVERRIDDEN</enum_element_name>
